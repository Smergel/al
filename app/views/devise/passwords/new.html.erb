<div class="container">
  <div class="row form_space">
    <div class="col-lg-4">
    	<legend>Send My Email Password Instructions</legend>
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field">
		    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
		  </div><br />

		  <div class="actions">
		    <%= f.submit "Send", class: "form_btn" %>
		  </div>
		<% end %><br />

		<%= render "devise/shared/links" %>
		</div>
		<div class="col-lg-8">
			<img src="http://cdn.zmescience.com/wp-content/uploads/2015/03/cat.jpg" />
		</div>
	</div>
</div>
